package com.mystere.mercadopago.service;

import com.mystere.mercadopago.model.AdminUser;
import com.mystere.mercadopago.repository.AdminUserRepository;
import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class AdminInitializer {

    @Bean
    CommandLineRunner initAdmin(AdminUserRepository adminRepo) {
        return args -> {

            if (adminRepo.count() == 0) {
                AdminUser admin = new AdminUser();
                admin.setUsername("admin");
                admin.setPassword("admin123"); // texto plano (ok por ahora)

                adminRepo.save(admin);

                System.out.println("✔ Admin creado: admin / admin123");
            } else {
                System.out.println("✔ Admin ya existente");
            }
        };
    }
}
