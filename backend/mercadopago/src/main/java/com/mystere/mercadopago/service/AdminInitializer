package com.mystere.mercadopago.service;

import com.mystere.mercadopago.model.AdminUser;
import com.mystere.mercadopago.repository.AdminUserRepository;
import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class AdminInitializer {

    @Bean
    CommandLineRunner initAdmin(AdminUserRepository repo) {
        return args -> {

            // ğŸ‘‡ usuario que vas a usar para loguearte
            String username = "admin";
            String password = "admin123";

            if (repo.findByUsername(username) == null) {
                AdminUser admin = new AdminUser();
                admin.setUsername(username);
                admin.setPassword(password); // texto plano (OK por ahora)

                repo.save(admin);
                System.out.println("âœ… Admin creado: " + username);
            } else {
                System.out.println("â„¹ï¸ Admin ya existe");
            }
        };
    }
}
